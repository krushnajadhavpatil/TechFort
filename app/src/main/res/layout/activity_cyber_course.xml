<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.cyber_course"
    android:background="@drawable/splash_bg">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="732dp"
        android:rowCount="10"
        android:columnCount="10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="21dp"
        android:id="@+id/top_view">


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"

            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            >
            <LinearLayout
                android:layout_width="322dp"
                android:layout_height="205dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cyberlogo"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"

            android:layout_marginTop="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#C9A31EF4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.Introdution"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"

            android:layout_marginTop="12dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#C9A31EF4"
            app:cardElevation="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.Basic Of Cyber security"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="0"

            android:layout_marginTop="12dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#C9A31EF4"
            app:cardElevation="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Chapter Third "
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_column="0"

            android:layout_marginTop="12dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#C9A31EF4"
            app:cardElevation="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.Chapter Fourth "
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_column="0"

            android:layout_marginTop="12dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#C9A31EF4"
            app:cardElevation="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.Chapter Fifth "
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_row="7"
            android:layout_column="0"

            android:layout_marginTop="12dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#C9A31EF4"
            app:cardElevation="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.Chapter Sixth "
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </GridLayout>


</LinearLayout>